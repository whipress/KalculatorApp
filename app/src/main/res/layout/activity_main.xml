<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="1"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center|left"
            android:textSize="60dp"
            android:textColor="#000000"
            android:id="@+id/CalculationValues"
            android:background="#ffffff"

            />
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/btn7"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn8"
            android:text="8"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn9"
            android:text="9"
            android:textSize="40dp"


            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btnDivision"
            android:text="รท"
            android:textSize="40dp"
            android:backgroundTint="#999999"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/btn4"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn5"
            android:text="5"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn6"
            android:text="6"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btnMulti"
            android:text="X"
            android:textSize="40dp"
            android:backgroundTint="#999999"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/btn1"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn2"
            android:text="2"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn3"
            android:text="3"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btnMinus"
            android:text="-"
            android:textSize="40dp"
            android:backgroundTint="#999999"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:text="C"
            android:id="@+id/btnClear"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btn0"
            android:text="0"
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btnPoint"
            android:text="."
            android:textSize="40dp"

            />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:id="@+id/btnSum"
            android:text="+"
            android:textSize="40dp"
            android:backgroundTint="#999999"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/btnResult"
            android:textSize="60dp"
            android:background="#07a8a8"

            />


    </LinearLayout>
</GridLayout>